
<div class="modal video-modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" id="Head">
                Đăng nhập
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>

            <section>
                <div class="modal-body">
                    <div class="w3_login_module">
                        <div class="module form-module">
                            <div class="toggle">
                                <i class="fa fa-times fa-pencil"></i>
                                <div class="tooltip">Đăng ký</div>
                            </div>

                            <div class="form">
                                <h3>Đăng nhập tài khoản</h3>
                                @using (Html.BeginForm(FormMethod.Get))
                                {

                                    <form>
                                        <input type="text" name="Username" placeholder="Username" required="">
                                        <input type="password" name="Password" placeholder="Password" required="">
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                        <input type="submit" value="Đăng nhập" id="dangnhap">
                                    </form>
                                }

                            </div>
                            <div class="form">
                                <h3>Tạo tài khoản</h3>
                                @using (Html.BeginForm(FormMethod.Get))
                                {
                                    <form>
                                        <input type="text" name="Username" placeholder="Username" required="">
                                        <input type="password" name="Password" placeholder="Password" required="">
                                        <input type="email" name="Email" placeholder="Email Address" required="">
                                        <input type="text" name="Phone" placeholder="Phone Number" required="">
                                        <input type="submit" value="Đăng ký">
                                    </form>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('.toggle').click(function () {
        // Switches the Icon
        $(this).children('i').toggleClass('fa-pencil');
        // Switches the forms
        $('.form').animate({
            height: "toggle",
            'padding-top': 'toggle',
            'padding-bottom': 'toggle',
            opacity: "toggle"
        }, "slow");
        //Đổi chữ "Đăng ký"

        if ($('.tooltip').text() == "Đăng ký") {
            $('.tooltip').text("Đăng nhập")

            $('#Head').text("Đăng ký tài khoản")
        }
        else {
            $('.tooltip').text("Đăng ký")
            $('#Head').text("Đăng nhập")
        }

    });






    $(document).ready(function () {
        //Tự show login dialog khi nhập sai
        if (($('.text-danger').text().length) > 1) {
            $('#loginbutton').click();
        }


        $('#loginbutton').css('cursor', 'pointer');



    });


</script>