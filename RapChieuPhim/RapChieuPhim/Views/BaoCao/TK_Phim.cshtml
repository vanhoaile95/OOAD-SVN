@section LoginText{
    @Html.Partial("~/Views/Home/LoginTextPartial.cshtml")
}


@using (Html.BeginForm())
{

    QuanLyCinemaEntities db = new QuanLyCinemaEntities();

    <div>
        <br />
        <h2 style="color:navy; font-size:xx-large; margin-top:0.5cm " class="text-center">
